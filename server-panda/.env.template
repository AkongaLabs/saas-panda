# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# For local development with Fly.io proxy:
# flyctl proxy 5432 -a database-panda-dev
DEV_DATABASE_URL=postgres://postgres:your_password@0.0.0.0:5432/postgres

# For production (automatically set by Fly.io):
# DATABASE_URL=postgres://...

# Rate Limiting Configuration (optional)
# Window in minutes for rate limit reset
RATE_LIMIT_WINDOW=15

# Maximum requests per window (defaults: dev=1000, prod=100)
RATE_LIMIT_MAX=1000

# Maximum API requests per window (defaults: dev=500, prod=50)
RATE_LIMIT_API_MAX=500

# Disable rate limiting entirely in development (true/false)
DISABLE_RATE_LIMIT_DEV=false

# Security Configuration (optional)
# Add allowed CORS origins (comma-separated)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4321

# Session Configuration (if using sessions)
# SESSION_SECRET=your-secret-key-here

# External API Keys (examples)
# STRIPE_API_KEY=sk_test_...
# SENDGRID_API_KEY=SG...
# OPENAI_API_KEY=sk-...

# Feature Flags (examples)
# ENABLE_ANALYTICS=true
# ENABLE_BETA_FEATURES=false

# Logging Configuration
# LOG_LEVEL=debug
# LOG_FORMAT=json

# Email Configuration (if sending emails)
# EMAIL_FROM=noreply@example.com
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=username
# SMTP_PASS=password
